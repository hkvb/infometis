#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/infometis/vcw"
export VCW_STACK_GLOBAL_STACKNAMES="infometis"
export VCW_STACK_GLOBAL_BOOTSTACKS="infometis"
export VCW_STACK_GLOBAL_RUNSTACKS="infometis"
export VCW_STACK_GLOBAL_VOLUME_LIST="vcw_infometis_repos"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="vcw_infometis_repos:/vcw/pwd"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_INFOMETIS_NETWORKS,\
$VCW_STACK_INFOMETIS_PORTS,\
$VCW_STACK_INFOMETIS_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES'
export VCW_STACK_GLOBAL_SERVICE_NAME="infometis"
export VCW_STACK_GLOBAL_IMAGE_NAME="hkvb/infometis.base"
export VCW_STACK_INFOMETIS_PORTS=
export VCW_STACK_INFOMETIS_NETWORKS=
export VCW_STACK_INFOMETIS_VOLUMES="'/etc:/hostfs/etc:ro','/var/run/docker.sock:/var/run/docker.sock','vcw_infometis_repos:/vcw/pwd'"
export VCW_STACK_GLOBAL_NETWORKS=
export VCW_STACK_GLOBAL_VOLUMES="vcw_infometis_repos: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS infometis
export VCW_STACK_INFOMETIS_COMMAND="${CONFIGURATION_MODULE_INFOMETIS_COMMAND}"
export VCW_STACK_INFOMETIS_COMMAND_INTERACTIVE="${CONFIGURATION_MODULE_INFOMETIS_COMMAND_INTERACTIVE}"
export VCW_STACK_INFOMETIS_ENVIRONMENT="${CONFIGURATION_MODULE_INFOMETIS_ENVIRONMENT}"
export VCW_STACK_INFOMETIS_DEPLOY_MODE="${CONFIGURATION_MODULE_INFOMETIS_DEPLOY_MODE}"
export VCW_STACK_INFOMETIS_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_INFOMETIS_MEMORY_LIMIT}"
export VCW_STACK_INFOMETIS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_INFOMETIS_MEMORY_RESERVED}"
# END SETTINGS infometis

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

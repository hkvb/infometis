#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/infometis/vcw"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_infometis"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_infometis"
export VCW_STACK_GLOBAL_RUNSTACKS="vcw_stack_infometis"
export VCW_STACK_GLOBAL_VOLUME_LIST=""
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_INFOMETIS_NETWORKS,\
$VCW_STACK_INFOMETIS_PORTS,\
$VCW_STACK_INFOMETIS_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES'
export VCW_STACK_GLOBAL_SERVICE_NAME="infometis"
export VCW_STACK_GLOBAL_IMAGE_NAME="hkvb/infometis.base"
export VCW_STACK_INFOMETIS_PORTS=
export VCW_STACK_INFOMETIS_NETWORKS=
export VCW_STACK_INFOMETIS_VOLUMES="'/etc:/hostfs/etc:ro','/var/run/docker.sock:/var/run/docker.sock','infometis_repos_${DOLLAR}{VCW_STACK_GLOBAL_STACKNAMES}:/vcw/pwd'"
export VCW_STACK_GLOBAL_NETWORKS=
export VCW_STACK_GLOBAL_VOLUMES="infometis_repos_${DOLLAR}{VCW_STACK_GLOBAL_STACKNAMES}: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS infometis
export VCW_STACK_INFOMETIS_COMMAND="'--keepalive:0','.invoke console start-registry'"
export VCW_STACK_INFOMETIS_COMMAND_INTERACTIVE="true" # enable command entry - from modeco onward
export VCW_STACK_INFOMETIS_ENVIRONMENT=
export VCW_STACK_INFOMETIS_DEPLOY_MODE="replicated"
export VCW_STACK_INFOMETIS_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export VCW_STACK_INFOMETIS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END SETTINGS infometis

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

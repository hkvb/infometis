#!/usr/bin/env bash

name=$(create-random)
executionplane docker service create --with-registry-auth --name "infometis-$name" -d --mode global --restart-condition none --mount type=bind,source=/var/run/docker.sock,destination=/var/run/docker.sock --mount type=volume,source=vcw_infometis_repos,destination=/vcw/pwd ${VCW_REGISTRY}${VCW_REALM}/infometis.${VCW_FLAVOR} --executiontag "$VCW_EXECUTIONTAG" .invoke $@
continue="true"
while [[ "true" == "$continue" ]] ;
do
    sleep 1;
    if [[ "$(docker service ls | grep "infometis-$name" | grep global)" == "" ]] ; then
      executionplane-error "infometis-service: no service found"
      continue="false"
    elif [[ "$(docker service ls | grep "infometis-$name" | grep global | grep 0/0)" != "" ]] ; then
      continue="false"
#    elif [[ "$(docker service ls | grep "infometis-$name" | grep global | grep 0/)" != "" ]] ; then
#      docker service rm $(docker service ls | grep "infometis-$name" | grep global | grep 0/ | cut -d ' ' -f 1)
#      continue="false"
    fi
done
executionplane docker service rm "infometis-$name"
